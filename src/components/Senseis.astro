---
import { Image } from "astro:assets";
import senseiPG from "../assets/senseiPG.webp";
import senseiPM from "../assets/senseiPM.webp";
import senseiCC from "../assets/senseiCC.webp";
---

<div class="container-info">
    <h1>Nuestros Senseis</h1>
    <div class="info-background">
    <div class="info-senseis">
    
        <div class="sensei">
            <Image src={senseiPG} alt="Sensei Parra Gaete" width="200" height="200" loading={"eager"} />
            <h2>Sensei Parra Gaete</h2>
            <p>Grado</p>
        </div>
        <div class="sensei">
            <Image src={senseiPM} alt="Sensei Parra Montero" width="200" height="200" loading={"eager"} />
            <h2>Sensei Parra Montero</h2>
            <p>Grado</p>
        </div>
        <div class="sensei">
            <Image src={senseiCC} alt="Sensei Cesar Calistro" width="200" height="200" loading={"eager"} />
            <h2>Sensei Cesar Calistro</h2>
            <p>Grado</p>
        </div>
    </div>  
    </div>
</div>

<style>

    html.dark h1{
        text-shadow: 3px 3px  red;
    }

    html.dark .info-background {
        background-color: red;
    }

    html.dark .info-senseis {
        border: 1px solid red;
        background-color: black;
    }

    .container-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
    }

    .info-senseis {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        background-color: white;
        margin-top: -20px;
        margin-left: -20px;
        padding: 30px;
        background-color: white;
        border: 1px solid black;

    }

    .info-background {
         background-color: black;
            padding: 10px;         
    }
    
    .sensei {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .sensei img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
    }

    p {
        font-size: 1.2rem;
        font-weight: 300;
        opacity: 0.9;
    }

    @media (max-width: 768px) {


        .info-senseis {
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 2rem;
        }
    }



</style>
