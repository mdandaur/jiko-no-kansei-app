---
import { Image } from "astro:assets";
import WhatsApp from "../assets/whatsapp.svg";
import Instagram from "../assets/instagram.svg";
---

<div class="container" id="contacto">
    <h1>Contacto</h1>
    <div class="hero">
        <div class="container-info">


            <div class="info">
                <h2>Ubicación</h2>
                <p>Av. Vicuña Mackenna 4860, Macul</p>
                <p>Santiago, Chile</p>
            </div>
            <div class="info">
                <h2>Horarios</h2>
                <p>Lunes, Miércoles y Viernes de 19:00 a 20:30hrs</p>
                <p>Martes y Jueves de 19:00 a 20:30hrs</p>
            </div>
            <div class="info">
                <h2>Redes Sociales</h2>
                <span>
                    <WhatsApp size="22" fill="white" />
                    <a href="https://wa.me/56956194591">+56 9 5619 4591</a>
                </span>
                <span>
                    <Instagram size="25" fill="white" />
                    <a href="https://www.instagram.com/club_jiko_no_kansei/">@club_jiko_no_kansei
                    </a>
                </span>
            </div>
        </div>
    </div>
</div> 

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
    }

    .container-info {
        display: flex;
        gap: 3rem;
    }



    .info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    span {
        display: flex;
        gap: 1rem;
        align-items: center;
        padding: 1rem;
    }

    h1 {
        font-size: 2rem;
        text-shadow: 3px 3px  red;

    }

    h2 {
        font-size: 1.5rem;
    }

    p {
        font-size: 1rem;
    }

    a {
        color: white;
        text-decoration: none;
        font-size: 1rem;
    }

    a:hover {
        color: #f0f0f0;
    }

    #map { height: 180px; }

    @media (max-width: 768px) {
        .container-info {
            padding: 1rem;
            flex-direction: column;
        }
        .info {
            padding: 1rem;
        }
        
    }
</style>