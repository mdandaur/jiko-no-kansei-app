<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        width: 100%;
        padding: 2rem;
        color: white;
        text-shadow: 3px 3px red;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-blend-mode: saturation;
    }

    .container-info {
        display: flex;
        width: 100%;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: left;
        gap: 1rem; 
        padding: 2rem;
        border-radius: 10px;
        width: 95%;
    }

    .button-background {
        background-color: black;
        padding: 10px; 
        width: 250px;
             
    }

    .button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 20px;
        margin-top: -20px; 
        margin-left: -20px;
        background-color: red;
        border: 1px solid black;
        border-radius: 0;
        color: white;
        font-size: 1.5rem;
        text-decoration: none;
        transition: transform 0.2s ease-in-out;
    } 

    .button:hover {
        transform: scale(1.05);
        background-color: rgb(218, 3, 3);
    }

    .button p, .button h1, .button h2, .button h3 {
        text-shadow: none;
        padding: 0;
        margin: 0;
    }

    .button span {
        display: flex;
        flex-direction: column;
        align-items: left;
        justify-content: left;
        text-wrap: balance;
    }


    .right-arrow {
        transition: transform 0.2s ease-in-out;
    }

    .button:hover .right-arrow {
        transform: translateX(10px);
    }
    
    h1 {
        font-size: 3rem;
        text-shadow: 3px 3px  red;
        
    }

    h2 {
        font-size: 2rem;
        text-shadow: 2px 2px  black;
    }

    h3 {
        font-size: 1.5rem;

    }

    p {
        font-size: 1.5rem;
        text-shadow: 1.5px 1.5px  black;
    }

    @media screen and (max-width: 768px) {
        .container{
            margin-top: 75px;
        }


        .container-info h1, .container-info h2, .container-info p {
            margin-top: 0;
            margin-bottom: 0;
        }
        
    }