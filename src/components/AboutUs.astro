<style>
    
    html.dark h1{
        text-shadow: 3px 3px  red;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        max-width: 70%;
        text-wrap: balance;
        text-align: center;
    }

    .container-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
    }

    
    .info {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .img img {
        width: 300px;
        height: 300px;
        border-radius: 50%;
    }



    p {
        font-size: 1.5rem;
    }

    @media (max-width: 768px) {
        .container-info {
            flex-direction: column;
        }

    }


</style>